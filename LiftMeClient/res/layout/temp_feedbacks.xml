<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="3dp" 
        android:src="@drawable/profilepicsml" />

    <TextView
        android:id="@+id/nameDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView1"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/imageView1"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameDate"
        android:layout_below="@id/nameDate"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/comment"
        android:layout_below="@id/comment"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/likeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/likes"
        android:layout_below="@id/comment"
        android:src="@drawable/likebutton" />
    
    <TextView
        android:id="@+id/dislikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/likeBtn"
        android:layout_below="@id/comment"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/dislikeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dislikes"
        android:layout_below="@id/comment"
        android:src="@drawable/dislikebutton" />
    
    <ImageView
	    android:id="@+id/separator"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@id/likes"
	    android:padding="5dp"
	    android:layout_marginTop="5dp"
	    android:src="@drawable/line" />

</RelativeLayout>